<Window x:Class="LoginActivity.View.MainPageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainPageView" Height="300" Width="300"
        Closing="Window_Closing">
    <Grid>
        <TextBlock Name="Filename" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="No file selected" VerticalAlignment="Top"/>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Click="BrowseClick"/>
        <Button Content="Send file" Name="SendFile" HorizontalAlignment="Left" Margin="116,111,0,0" VerticalAlignment="Top" Width="75" Click="SendClick" FontSize="16"/>
        <TextBlock Name="Information" HorizontalAlignment="Left" Margin="116,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Red"/>
        <Button Content="List users" HorizontalAlignment="Left" Margin="207,188,0,0" VerticalAlignment="Top" Width="75" Click="ListUsers"/>
        <TextBlock Name="Users" HorizontalAlignment="Left" Margin="23,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="Black"/>
    </Grid>
</Window>
